#include <bits/stdc++.h> 

Node *firstNode(Node *head)
{

    if(head==nullptr || head->next==nullptr) return nullptr;
    
    Node* fast=head;
    Node* slow=head;
    Node* entry=head;
    
    while(fast->next!=NULL and fast->next->next!=NULL){
        fast=fast->next->next;
        slow=slow->next;
        
        if(fast==slow){
            while(slow!=entry){
                slow=slow->next;
                entry=entry->next;
            }
            return slow;
        }
        
    }
    return NULL;
}
