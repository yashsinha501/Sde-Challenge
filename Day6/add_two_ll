#include <bits/stdc++.h> 

Node *addTwoNumbers(Node *head1, Node *head2)
{
    Node* dummy=new Node(-1);
    Node* tmp=dummy;
    
    int c=0;
    
    while(head1!=NULL  ||  head2!=NULL || c!=NULL){
        int sum=0;
        if(head1!=NULL){
            sum+=head1->data;
            head1=head1->next;
        }
        
        if(head2!=NULL){
            sum+=head2->data;
            head2=head2->next;
        }
        
        sum+=c;
        c=sum/10;
        Node* node=new Node(sum%10);
        tmp->next=node;
        tmp=tmp->next;
    }
    return dummy->next;
}
