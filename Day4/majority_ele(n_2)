#include <bits/stdc++.h> 
int findMajorityElement(int arr[], int n) {
        int count = 0;
        int candidate = -1;

        for (int num =0;num<n; num++) {
            if (count == 0) {
                candidate = arr[num];
            }
            if(arr[num]==candidate) count += 1; 
            else count -= 1; 
        }

    count = 0;

    for(int i = 0; i < n; i++) {
        if(arr[i] == candidate) {
            count++;
        }
    }

    if(count > n / 2) {
        return candidate;
    }

    return -1;
}
