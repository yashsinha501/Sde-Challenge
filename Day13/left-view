#include<bits/stdc++.h>
vector<int> getLeftView(TreeNode<int> *root)
{
    vector<int> ans;
    
    if(root==nullptr)return ans;
    
    queue<TreeNode<int>*> q;
    q.push(root);
    
    while(!q.empty()){
        int n=q.size();
        
        for(int i=1;i<=n;i++){
            TreeNode<int>*  tmp=q.front();
            q.pop();
            if(i==1)ans.push_back(tmp->data);
            if(tmp->left)q.push(tmp->left);
            if(tmp->right)q.push(tmp->right);
        }
        
    }
    return ans;
}
